# Start a terminal
super + Return
    urxvtcd

# Toggle through monitors
super + p
    $HOME/.bin/random-wallpaper

# Next & prev song
XF86Audio{Next,Prev}
    mpc {next,prev} && \
    notify-send "$( mpc current )" && \
    echo "{playlist_next,playlist_prev}" > $HOME/.config/mpv/mpv-control

# Volume control
XF86Audio{Raise,Lower}Volume
    amixer set Master 5%{+,-}

# Play / pause the current song
XF86AudioPlay
    $HOME/.bin/toggle-music

# Toggle mute
XF86AudioMute
    amixer set -c 0 Master 25 unmute

# Toggle touchpad on/off
XF86TouchpadToggle
    $HOME/.bin/toggle-touchpad

# Make a screenshot
Print
    scrot $HOME/bilder/Screenshots/%Y-%M-%d-%T.png

# Brightness
XF86MonBrightness{Up,Down}
    light -{a,s} 5%

# Start firefox
super + o
    firefox

# Start dmenu
super + d
    $HOME/.bin/custom-launcher control

# vim: set syntax=conf:
