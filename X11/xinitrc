#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

exec i3 &
exec udiskie &
exec xrdb -load $HOME/.config/X11/Xresources &
exec urxvtd &
exec compton &
exec light 20% &
exec xautolock -time 10 -locker $HOME/.bin/lock-screen -detectsleep &
exec xcmenu &
exec unclutter &
exec $HOME/.bin/random-wallpaper &
exec $HOME/.bin/lightson &
exec xbindkeys -f ~/.config/X11/xbindkeysrc &
exec dunst
