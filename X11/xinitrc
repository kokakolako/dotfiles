#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for file in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$file" ] && . "$file"
  done
  unset file
fi

setxkbmap -layout de -option ctrl:nocaps &
xsetroot -cursor_name arrow &
$HOME/.config/herbstluftwm/panel.sh &
hsetroot -full "$( find $HOME/pictures/wallpaper/1920x1080/ -type f | shuf -n 1 )" &
xrdb -load $HOME/.config/X11/Xresources &
sxhkd -c $HOME/.config/sxhkd/sxhkdrc &
unclutter &
mpd &
emacs --daemon &
compton -b &
gpg-agent --daemon &
dunst &
xautolock -time 15 &
xrandr --setprovideroffloadsink 0x55 0x7e &

session=${1:-hlwm}
case $session in
    hlwm    )       exec herbstluftwm -c $HOME/.config/herbstluftwm/autostart --locked;;
    cwm     )       exec cwm -c $HOME/.config/cwm/cwmrc;;
    bspwm   )       exec bspwm -c $HOME/.config/bspwm/bspwmrc;;
    *       )       exec $1;;
esac
