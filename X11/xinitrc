#!/bin/sh

setxkbmap -layout de &
xsetroot -cursor_name arrow &
$HOME/.config/herbstluftwm/panel.sh &
$HOME/.bin/random-wallpaper &
xrdb -load $HOME/.config/X11/Xresources &
sxhkd -c $HOME/.config/sxhkd/sxhkdrc &
unclutter &
mpd &
emacs --daemon &
compton -b &
xautolock -time 15 -locker ~/.bin/lock-screen

session=${1:-hlwm}
case $session in
    xmonad  )       exec xmonad;;
    bspwm   )       exec bspwm;;
    i3      )       exec i3;;
    2bwm    )       exec 2bwm;;
    rat     )       exec ratpoison;;
    hlwm    )       exec herbstluftwm -c $HOME/.config/herbstluftwm/autostart --locked;;
    *       )       exec $1;;
esac
